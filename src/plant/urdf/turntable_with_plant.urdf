<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="turntable_with_plant">

  <xacro:macro name="add_camera" params="name parent x y z r p y">
    
    <link name="${name}">
      <collision>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry><box size="0.02 0.02 0.02"/></geometry>
      </collision>
      <visual>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry><box size="0.02 0.02 0.02"/></geometry>
        <material name="Blue"><color rgba="0 0 1 1"/></material>
      </visual>
      <inertial>
        <mass value="0.05"/>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <inertia ixx="1e-5" ixy="0" ixz="0" iyy="1e-5" iyz="0" izz="1e-5"/>
      </inertial>
    </link>

    <joint name="${name}_joint" type="fixed">
      <parent link="${parent}"/>
      <child link="${name}"/>
      <origin xyz="${x} ${y} ${z}" rpy="${r} ${p} ${y}"/>
    </joint>

    <link name="${name}_optical"/>
    <joint name="${name}_optical_joint" type="fixed">
      <parent link="${name}"/>
      <child link="${name}_optical"/>
      <origin xyz="0 0 0" rpy="-1.57 0 -1.57"/>
    </joint>

    <gazebo reference="${name}">
      <material>Gazebo/Black</material>
      <sensor name="${name}" type="depth">
        <pose>0 0 0 0 0 0</pose>
        <visualize>true</visualize>
        <update_rate>60</update_rate>
        <camera>
          <horizontal_fov>1.22</horizontal_fov>
          <image>
            <format>B8G8R8</format>
            <width>1080</width>
            <height>1080</height>
          </image>
          <clip>
            <near>0.01</near>
            <far>1.2</far>
          </clip>
        </camera>
        <plugin name="${name}_controller" filename="libgazebo_ros_camera.so">
          <ros>
            <namespace>/robot1</namespace>
            <remapping>image_raw:=${name}/image_raw</remapping>
            <remapping>image_depth:=${name}/depth/image_raw</remapping>
            <remapping>camera_info:=${name}/camera_info</remapping>
            <remapping>camera_info_depth:=${name}/depth/camera_info</remapping>
            <remapping>points:=${name}/depth/points</remapping>
          </ros>
          <camera_name>${name}</camera_name>
          <frame_name>${name}_optical</frame_name>
        </plugin>
      </sensor>
    </gazebo>
  </xacro:macro>

  <link name="world"/>

  <link name="struct">
    <visual>
      <geometry><cylinder radius="0.05" length="0.1"/></geometry>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <material name="Green"><color rgba="0.0 0.6 0.0 1.0"/></material>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry><cylinder radius="0.05" length="0.1"/></geometry>
    </collision>
    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <mass value="0.3"/>
      <inertia ixx="0.00026" ixy="0.0" ixz="0.0" iyy="0.00026" iyz="0.0" izz="0.000075"/>
    </inertial>
  </link>
  
  <gazebo reference="struct">
   <material>Gazebo/Green</material>
  </gazebo>
  
  <joint name="struct_fixed" type="fixed">
    <parent link="world"/>
    <child link="struct"/>
    <origin xyz="0 0 0.1" rpy="0 0 0"/> 
  </joint>

  <link name="turntable">
    <visual>
      <geometry>
        <cylinder radius="0.15" length="0.02"/>
      </geometry>
      <origin xyz="0 0 0" rpy="0 0 0"/> 
      <material name="Gray"><color rgba="0.7 0.9 0.6 1.0"/></material>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <cylinder radius="0.15" length="0.02"/>
      </geometry>
    </collision>
    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <mass value="2"/>
      <inertia ixx="0.0113" ixy="0.0" ixz="0.0" iyy="0.0113" iyz="0.0" izz="0.0225"/>
    </inertial>
  </link>
  
  <gazebo reference="turntable">
   <material>Gazebo/Yellow</material>
  </gazebo>

  <joint name="turntable_joint" type="revolute">
    <dynamics damping="10.0" friction="10.0"/> 
    <parent link="struct"/> 
    <child link="turntable"/>
    <origin xyz="0 0 0.05" rpy="0 0 0"/> 
    <axis xyz="0 0 1"/>
    <limit lower="0.0" upper="6.2832" effort="5.0" velocity="2.0"/> 
  </joint>

  <link name="plant">
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/> 
      <geometry>
        <mesh filename="file:///home/woody/Botany_bot/install/your_pkg/share/your_pkg/meshes/10.dae" scale="0.5 0.5 0.5"/>
      </geometry>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/> 
      <geometry>
        <mesh filename="file:///home/woody/Botany_bot/install/your_pkg/share/your_pkg/meshes/10.dae" scale="0.5 0.5 0.5"/>
      </geometry>
    </collision>
    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <mass value="2.0"/> 
      <inertia ixx="0.010308" ixy="0.0" ixz="0.0" iyy="0.010308" iyz="0.0" izz="0.008836"/>
    </inertial>
  </link>

  <joint name="stl_fixed_joint" type="fixed">
    <parent link="turntable"/>
    <child link="plant"/>
    <origin xyz="0 0 0.01" rpy="1.57 0 0"/> 
  </joint>

  <xacro:add_camera name="cam_front" parent="world" x="0.55" y="0" z="0.42" r="0" p="0" y="3.1415926535"/>

  <xacro:add_camera name="cam_top" parent="world" x="0.55" y="0" z="0.61" r="0" p="0.55" y="-3.14"/>
  
  <ros2_control name="GazeboSystem" type="system">
    <hardware>
      <plugin>gazebo_ros2_control/GazeboSystem</plugin>
    </hardware>
    <joint name="turntable_joint">
      <command_interface name="velocity"/>
      <state_interface name="position"/>
      <state_interface name="velocity"/>
      <state_interface name="effort"/>
    </joint>
  </ros2_control>
 
  <gazebo>
    <plugin filename="libgazebo_ros2_control.so" name="gazebo_ros2_control">
      <robot_param>robot_description</robot_param>
      <robot_param_node>robot_state_publisher</robot_param_node>
      <parameters>/home/woody/Botany_bot/install/your_pkg/share/your_pkg/config/controllers.yaml</parameters>
    </plugin>
  </gazebo>

</robot>
